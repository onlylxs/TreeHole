/* pages/treeDetail/index.wxss */
@import "../seach-templ/index.wxss";

.comment-foot {
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    border-top: 1rpx solid #ccc;
    background: #fff;
}

.comment-box {
    padding: 10rpx 30rpx;
    display: flex;
}

.comment-box input {
    flex: 2;
    border: 1rpx solid #ccc;
    border-radius: 6rpx;
    margin-right: 20rpx;
    padding: 0 10rpx;
}

.comment-box button {
    color: #fff;
    border-radius: 6rpx;
    font-weight: 400;
    height: 100%;
    background: #ed711a;
}

.comment-box input, .comment-box button {
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.comment-box button::after {
    border: 0;
}

.Reply-tit {
    position: relative;
    border-bottom: 1rpx solid #ccc;
    margin-top: 50rpx;
}

.Reply-tit text {
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    position: absolute;
    top: -30rpx;
    left: 30rpx;
    border: 1rpx solid #ed711a;
    color: #ed711a;
    text-align: center;
    font-size: 26rpx;
    background: #fff;
}

.Tree_Photo {
    display: flex;
    justify-content: flex-start;
    margin: 0 -10rpx;
}

.Tree_Photo image {
    margin: 15rpx 10rpx 0 10rpx;
    height: 33vw;
    max-width: 33vw;
}

.addre_box {
    float: right;
    color: #999;
}

.addre_box .iconfont {
    font-size: 50rpx;
    vertical-align: middle;
}
