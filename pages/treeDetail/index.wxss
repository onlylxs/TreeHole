/* pages/treeDetail/index.wxss */
@import "../seach-templ/index.wxss";
.comment-mt{padding-top: 110rpx;}
.comment-foot{position: fixed;bottom:0;width:100%;left:0;border-top: 1rpx solid #ccc;background: #fff;}
.comment-box{padding:10rpx 30rpx;display: flex;}
.comment-box input{flex: 2;border: 1rpx solid #ccc;border-radius: 6rpx;margin-right: 20rpx;padding:0 10rpx;}
.comment-box button{color:#fff;border-radius: 6rpx;font-weight: 400;height: 100%;background: #ed711a;}
.comment-box input,
.comment-box button{font-size: 28rpx;height:70rpx;line-height: 70rpx;}
.comment-box button::after {border: 0;} 
